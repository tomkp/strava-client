{
  "name": "strava-client",
  "version": "1.0.0",
  "description": "A complete, type-safe TypeScript client for the Strava API v3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "checks": "npm run typecheck && npm run lint && npm run format"
  },
  "keywords": [
    "strava",
    "api",
    "client",
    "typescript",
    "oauth",
    "fitness",
    "running",
    "cycling",
    "activities",
    "athlete"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomkp/strava-client.git"
  },
  "bugs": {
    "url": "https://github.com/tomkp/strava-client/issues"
  },
  "homepage": "https://github.com/tomkp/strava-client#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.50.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
